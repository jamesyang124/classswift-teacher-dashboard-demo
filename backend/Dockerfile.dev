# Backend Development Dockerfile
FROM golang:1.21-alpine

# Install air for live reloading
RUN go install github.com/cosmtrek/air@latest

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port 3000
EXPOSE 3000

# Use air for live reloading in development
CMD ["air", "-c", ".air.toml"]